{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "addLabels": [
        "dependency-type:dev-tools"
      ],
      "description": "update npm/poetry dev dependencies",
      "groupName": "dev-tools-{{manager}}-{{#if isMajor}}major{{else}}non-major{{/if}}",
      "matchDepTypes": [
        "devDependencies",
        "dev-dependencies",
        "dev"
      ],
      "matchManagers": [
        "npm",
        "poetry"
      ],
      "semanticCommitScope": "dev-tools",
      "semanticCommitType": "chore",
      "schedule": [
        "every 14 day"
      ]
    },
    {
      "addLabels": [
        "dependency-type:dev-tools"
      ],
      "description": "update mise dependencies (only within mise.toml files at repository root)",
      "groupName": "dev-tools-{{manager}}-{{#if isMajor}}major{{else}}non-major{{/if}}",
      "matchFileNames": [
        "mise.toml"
      ],
      "matchManagers": [
        "mise"
      ],
      "semanticCommitScope": "dev-tools",
      "semanticCommitType": "chore",
      "schedule": [
        "every 14 day"
      ]
    },
    {
      "addLabels": [
        "dependency-type:dev-tools"
      ],
      "description": "update pre-commit dependencies",
      "groupName": "dev-tools-{{manager}}-{{#if isMajor}}major{{else}}non-major{{/if}}",
      "matchManagers": [
        "pre-commit"
      ],
      "semanticCommitScope": "dev-tools",
      "semanticCommitType": "chore",
      "schedule": [
        "every 14 day"
      ]
    },
    {
      "addLabels": [
        "dependency-type:dev-tools"
      ],
      "description": "update lockfiles",
      "groupName": "dev-tools-{{manager}}-lockfile",
      "matchUpdateTypes": [
        "lockFileMaintenance"
      ],
      "semanticCommitScope": "dev-tools",
      "semanticCommitType": "chore",
      "schedule": [
        "every 14 day"
      ]
    },
    {
      "automerge": true,
      "automergeType": "pr",
      "description": "update renovate itself",
      "fetchChangeLogs": "off",
      "groupName": "renovate-{{#if isMajor}}major{{else}}non-major{{/if}}",
      "matchDatasources": [
        "docker",
        "github-releases",
        "npm"
      ],
      "matchPackageNames": [
        "renovate",
        "renovate/renovate",
        "renovatebot/renovate"
      ],
      "semanticCommitScope": "dev-tools",
      "semanticCommitType": "chore",
      "schedule": [
        "every 7 day"
      ]
    }
  ],
  "pre-commit": {
    "enabled": true
  }
}
