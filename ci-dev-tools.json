{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "dev-tools(npm/poetry) | configure version separation and grouping",
      "groupName": "dev-tools-{{manager}}-{{#if isMajor}}major{{else}}non-major{{/if}}",
      "matchDepTypes": [
        "devDependencies",
        "dev-dependencies",
        "dev"
      ],
      "matchManagers": [
        "npm",
        "poetry"
      ],
      "separateMajorMinor": true,
      "separateMinorPatch": false,
      "separateMultipleMajor": true,
      "separateMultipleMinor": false
    },
    {
      "description": "dev-tools(pre-commit) | configure version separation and grouping",
      "groupName": "dev-tools-{{manager}}-{{#if isMajor}}major{{else}}non-major{{/if}}",
      "matchManagers": [
        "pre-commit"
      ],
      "separateMajorMinor": true,
      "separateMinorPatch": false,
      "separateMultipleMajor": true,
      "separateMultipleMinor": false
    },
    {
      "commitMessageAction": "update lockfile",
      "commitMessageTopic": "{{manager}}",
      "description": "dev-tools(npm/poetry) | configure grouping and commit message",
      "groupName": "dev-tools-{{manager}}-lockfile",
      "matchManagers": [
        "npm",
        "poetry"
      ],
      "matchUpdateTypes": [
        "lockFileMaintenance"
      ]
    },
    {
      "fetchChangeLogs": "off",
      "matchDatasources": [
        "docker",
        "github-releases",
        "npm"
      ],
      "matchPackageNames": [
        "renovate",
        "renovate/renovate",
        "renovatebot/renovate"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "schedule": [
        "every 7 day"
      ]
    }
  ],
  "pre-commit": {
    "enabled": true
  }
}
