{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "addLabels": [
        "dependency-type:{{datasource}}",
        "dependency:{{packageName}}"
      ],
      "description": "github-actions-dependencies | all | configure labels and semantic commit type/scope",
      "matchFileNames": [
        ".github/workflows/**"
      ],
      "matchManagers": [
        "custom.regex"
      ],
      "semanticCommitScope": "github-actions",
      "semanticCommitType": "ci",
      "separateMajorMinor": true,
      "separateMinorPatch": false,
      "separateMultipleMajor": true,
      "separateMultipleMinor": false
    },
    {
      "automerge": true,
      "automergeType": "pr",
      "description": "github-actions-dependencies | minor/patch | configure automerge, group and min release age",
      "groupName": "github-actions-dependencies-non-major",
      "matchFileNames": [
        ".github/workflows/**"
      ],
      "matchManagers": [
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "minimumReleaseAge": "30 days",
      "platformAutomerge": true
    },
    {
      "automerge": false,
      "description": "github-actions-dependencies | major | configure automerge, group and min release age",
      "groupName": "github-actions-dependencies-major",
      "matchFileNames": [
        ".github/workflows/**"
      ],
      "matchManagers": [
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "minimumReleaseAge": "90 days"
    }
  ]
}
