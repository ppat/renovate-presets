{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "addLabels": [
        "dependency-type:github-actions"
      ],
      "description": "github-actions common settings",
      "matchManagers": [
        "github-actions"
      ],
      "semanticCommitScope": "github-actions",
      "semanticCommitType": "chore",
      "schedule": [
        "every 14 day"
      ]
    },
    {
      "automerge": true,
      "description": "auto merge non-major versions of trusted github-actions after 3 days",
      "groupName": "trusted github-actions",
      "matchManagers": [
        "github-actions"
      ],
      "matchPackageNames": [
        "/^actions\//",
        "/^aquasecurity\//",
        "/^docker\//",
        "/^fluxcd\//",
        "/^github\//",
        "/^googleapis\//",
        "/^tailscale\//"
      ],
      "matchUpdateTypes": [
        "digest",
        "minor",
        "patch"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "addLabels": [
        "automerge:off",
        "dependency-type:github-actions"
      ],
      "automerge": false,
      "description": "manual merge major versions of trusted github-actions after 30 days",
      "matchManagers": [
        "github-actions"
      ],
      "matchPackageNames": [
        "/^actions\//",
        "/^aquasecurity\//",
        "/^docker\//",
        "/^fluxcd\//",
        "/^github\//",
        "/^googleapis\//",
        "/^tailscale\//"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "minimumReleaseAge": "30 days"
    },
    {
      "addLabels": [
        "automerge:off",
        "dependency-type:github-actions"
      ],
      "automerge": false,
      "description": "manually merge non-trusted github-actions after 30 days",
      "matchManagers": [
        "github-actions"
      ],
      "matchPackageNames": [
        "!/^actions\//",
        "!/^aquasecurity\//",
        "!/^docker\//",
        "!/^fluxcd\//",
        "!/^github\//",
        "!/^googleapis\//",
        "!/^tailscale\//"
      ],
      "minimumReleaseAge": "30 days"
    },
    {
      "addLabels": [
        "dependency-type:dev-tools"
      ],
      "description": "update regex dependencies of github-actions",
      "groupName": "{{packageName}} (github-actions dependency)",
      "matchFileNames": [
        ".github/workflows/**"
      ],
      "matchManagers": [
        "custom.regex"
      ],
      "semanticCommitScope": "dev-tools",
      "semanticCommitType": "chore"
    }
  ]
}
